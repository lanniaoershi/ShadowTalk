<resources>
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/txt_size_medium</item>
        <item name="android:displayOptions"></item>
    </style>

    <style name="PartyShareActionOverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/party_share_actionbar_option_menu_icn</item>
    </style>

    <style name="PartyShareActivityActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:backgroundStacked">@color/action_bar_color</item>
        <item name="android:backgroundSplit">@color/action_bar_color</item>
        <item name="android:displayOptions"></item>
    </style>

    <style name="PartyShareActivityActionBarTabView" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_view_background</item>
        <item name="android:paddingStart">4dip</item>
        <item name="android:paddingEnd">4dip</item>
    </style>

    <style name="PartyShareActivityActionBarTabBar" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="PartyShareActivityActionBarTabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/txt_size_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@drawable/tab_text_selecter</item>
    </style>

    <style name="MusicListMedium">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/music_title_txt_size</item>
    </style>

    <style name="MusicListSmall">
        <item name="android:textColor">@color/sub_text_color</item>
        <item name="android:textSize">@dimen/artist_name_txt_size</item>
    </style>

    <style name="MusicListFocusedMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_focus_text_color</item>
        <item name="android:textSize">@dimen/music_title_txt_size</item>
    </style>

    <style name="MusicListFocusedSmall">
        <item name="android:textColor">@color/sub_focus_text_color</item>
        <item name="android:textSize">@dimen/artist_name_txt_size</item>
    </style>

    <style name="MusicPlayView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">@dimen/playview_music_title_txt_size</item>
    </style>

    <style name="MusicPlayViewSmall">
        <item name="android:textColor">@color/sub_text_color</item>
        <item name="android:textSize">@dimen/artist_name_txt_size</item>
    </style>

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>

</resources>
