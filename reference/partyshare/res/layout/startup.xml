<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include layout="@layout/help"
            android:id="@+id/help_layout" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_new_party"
            android:layout_width="match_parent"
            android:layout_height="@dimen/partyshare_btn_height"
            android:background="@drawable/party_share_button"
            android:textSize="@dimen/partyshare_btn_txt_size"
            android:text="@string/party_share_strings_new_party_button_txt">
        </Button>

        <View
            android:id="@+id/divider"
            android:layout_below="@id/btn_new_party"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color">
        </View>

        <Button
            android:id="@+id/btn_guest"
            android:layout_below="@id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/partyshare_btn_height"
            android:background="@drawable/party_share_button"
            android:textSize="@dimen/partyshare_btn_txt_size"
            android:text="@string/party_share_strings_startup_join_button_txt">
        </Button>
    </RelativeLayout>

</LinearLayout>
